<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_hotel_report_wizard_form" model="ir.ui.view">
        <field name="name">hotel.report.wizard.form</field>
        <field name="model">hotel.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Hotel Booking Report">
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button string="Print" type="object" name="action_print_report" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for wizard -->
    <record id="hotel_report_action" model="ir.actions.act_window">
        <field name="name">Hotel Report</field>
        <field name="res_model">hotel.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
